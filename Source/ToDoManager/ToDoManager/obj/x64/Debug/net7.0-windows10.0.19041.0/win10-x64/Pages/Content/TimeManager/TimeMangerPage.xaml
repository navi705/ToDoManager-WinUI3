<Page x:ConnectionId='1'
    x:Class="ToDoManager.Pages.TimeMangerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ToDoManager.Pages"
    xmlns:model="using:ToDoManager.Models"
    xmlns:converter="using:ToDoManager.HelpClasses"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:TimeSpanToString x:Key="myTimeConverter" />
    </Page.Resources>

    <Grid RowSpacing="15" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid HorizontalAlignment="Center" Grid.ColumnSpan="3"  ColumnSpacing="30"   >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='12'                                                    Grid.Column="0" >
                <FontIcon FontSize="27" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0B0;" />
            </Button>

            <CalendarDatePicker x:ConnectionId='13' FontSize="28"                                                 HorizontalAlignment="Center"  Grid.Column="1" />

            <Button x:ConnectionId='14'                                        Grid.Column="2" >
                <FontIcon FontSize="27" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0AF;" />
            </Button>
        </Grid>
        
        <!--<Button Grid.Column="0" Grid.Row="0"  Command="{x:Bind ViewModel.PrevDay}">
            <FontIcon FontSize="22" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0B0;" />
        </Button>

        <CalendarDatePicker FontSize="22" Date="{x:Bind ViewModel.DatePage,Mode=TwoWay}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"  />

        <Button Grid.Row="0" Grid.Column="2" Command="{x:Bind ViewModel.NextDay}"  >
            <FontIcon FontSize="22" FontFamily="Segoe MDL2 Assets" Glyph="&#xF0AF;" />
        </Button>-->

        <Grid x:ConnectionId='2'  Name="chart" Grid.Row="1"  Grid.ColumnSpan="3" MaxWidth="1200"  />



        <Grid HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="3" ColumnSpacing="30" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button x:ConnectionId='10'                                            >
            <FontIcon FontSize="19" FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" Grid.Column="0" />
        </Button>

            <Button x:ConnectionId='11'  Content="Save All "                                           Grid.Column="1"  />
        </Grid>
        
        
        <ListView x:ConnectionId='3'                                                        Grid.Row="3" Grid.ColumnSpan="3" SelectionMode = "None" IsItemClickEnabled = "False" >
            <ListView.ItemTemplate>
                <DataTemplate                        >
                    <ListViewItem x:ConnectionId='5'>
                        <Grid Grid.Column="5" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center" ColumnSpacing="10"  >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:ConnectionId='6'                                        Grid.Column="0" Grid.Row="1" Width="100" />
                            <TimePicker x:ConnectionId='7'                                                                           Grid.Column="1" Grid.Row="1" FontSize="14" />
                            <TimePicker x:ConnectionId='8'                                                                           Grid.Column="2" Grid.Row="1"  FontSize="14" />

                            <Button x:ConnectionId='9' Grid.Row="1" Grid.Column="4"                          >
                                <FontIcon FontSize="12" FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" />
                            </Button>
                        </Grid>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

